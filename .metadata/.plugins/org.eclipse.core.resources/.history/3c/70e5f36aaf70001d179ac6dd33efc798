package com.example.app.models;

import org.hibernate.validator.constraints.Length;

import jakarta.validation.constraints.NotNull;
import jakarta.validation.constraints.Pattern;

public class PaymentDetails {

	@NotNull(message="Please provide Generated BookingID to process furthur")
	private String bookingID;
	
	@NotNull(message="Booking Mode cannot be null")
	private String bookingMode;
	
	@Pattern(regexp = "^[\\w\\.\\-_]{3,}@[a-zA-Z]{3,}",message="Invalid Upi Id Format")
	private String upiID;
	
	@Length(max=12,message="Invalid Card Format")
	private String cardNumber;

	public PaymentDetails() {
		super();
	}
	
	
}
